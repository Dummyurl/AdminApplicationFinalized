<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:id="@+id/relativelayout_adding_removing">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearlayout_adding_removing">

        <Button
            android:layout_width="30dp"
            android:id="@+id/remove_edit_lucky_number_1"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:layout_margin="4dp"
            android:textColor="#fff"
            android:background="@color/Red"
            android:text="-" />


        <EditText
            android:id="@+id/enter_lucky_number_1"
            android:layout_width="339dp"
            android:layout_height="match_parent"
            android:hint="Enter todays lucky no" />


    </LinearLayout>

    <Button
        android:id="@+id/add_edit_lucky_number_1"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:background="@color/Blue"
        android:padding="3dp"
        android:layout_alignParentRight="true"
        android:text="+"
        android:textColor="#fff" />

</RelativeLayout>

